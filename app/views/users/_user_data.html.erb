  <p>
    <strong>Is active:</strong>
    <%= @mentee.is_active %>
  </p>
  
  <% if current_user.id == @user.id %>
    <%= link_to 'Edit', edit_mentee_path(@mentee),:class => "waves-effect waves-light btn" %> 
  <% end %>
<% end %>
  </div>
  </div>
  </div>
  
<% if @user.is_mentor? %> 
<% @mentor = Mentor.for_user(@user.id).first %> 
